{
  "name": "github-action-dashboard",
  "version": "2.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "bootstrap": "npm install && npm run install-client && npm run build",
    "install-client": "cd client && npm install",
    "build": "cd client && npm run build",
    "build-docker-local": "docker build -t github-action-dashboard .",
    "test:integration": "DEBUG=action-dashboard,-not_this jest ./tests/integration --silent",
    "test": "DEBUG=action-dashboard,-not_this jest ./tests/unit --silent",
    "serve": "./node_modules/nodemon/bin/nodemon.js index.js --ignore 'client/*.js' --exec 'npm run lint && node'",
    "lint": "./node_modules/.bin/eslint '**/*.js' --ignore-pattern 'client/dist/' --fix",
    "audit": "npm audit --fix && (cd client && npm audit --fix)"
  },
  "hooks": {
    "pre-commit": "npm run lint && npm run test"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "comments": {
    "p-limit": "Stuck on 3.1.0 until we move to ESM - upgrading to 4 breaks tests - Actions.mockImplementation etc...",
    "octokit": ">=5 requires node 18, which might be ok?",
    "octokit/webhooks": ">=11 fails tests on typeerror - data must be type  "
  },
  "dependencies": {
    "@octokit/auth-app": "^4.0.13",
    "@octokit/plugin-retry": "^4.1.6",
    "@octokit/plugin-throttling": "^5.2.3",
    "@octokit/rest": "^19.0.11",
    "@octokit/webhooks": "^10.9.1",
    "@supercharge/promise-pool": "2.4.0",
    "body-parser": "^1.20.2",
    "connect-history-api-fallback": "^2.0.0",
    "dayjs": "^1.11.8",
    "debug": "^4.3.4",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "jest": "^29.5.0",
    "lodash": "^4.17.21",
    "socket.io": "^4.6.2"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.22.5",
    "axios": "^1.4.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "nodemon": "^2.0.22",
    "prettier": "2.8.8"
  }
}
